<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{*}SNWBL - View User Projects</title>
    <link rel="stylesheet" href="/css/tailwind.css">
    <script src="/js/helper.js" defer></script>
</head>
<body class="bg-gradient-to-r from-gray-500 via-white to-gray-500">
    <div>
        <%- include('partials/header.ejs') %>
        <div>
            <div class='scrollable'>
            <% if(session.isLoggedIn === true){ %>
                <% for(let i = 0; i < projects.length; i++) { %>
                    <div>
                        <p>Author: <%= projects[i].author %></p>
                        <p>Started On: <%= Date(projects[i].startedOn) %> </p>
                        <% if(projects[i].isFinished === 1){ %>
                            <p>Finished On: <%= Date(projects[i].finishedOn) %> </p>
                        <% } else {%>
                            <p>Not Finished</p>
                        <% } %>
                    </div>
                    <hr>
                <% } %>
                </div>
                <%- include('partials/footer.ejs') %>
            <% } else {%>
                <%- include('partials/accessDenied.ejs') %>
            <% } %>
        </div>
    </div>
</body>
</html>