<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{*}SNWBL - View User Projects</title>
    <link rel="stylesheet" href="/css/tailwind.css">
    <script src="/js/helper.js" defer></script>
</head>
<body class="bg-gradient-to-r from-gray-500 via-white to-gray-500">
    <div>
        <%- include('partials/header.ejs') %>
        <div>
            <div class='scrollable'>
            <% if(session.isLoggedIn === true){ %>
                <% for(let i = 0; i < projects.length; i++) { %>
                    <div>
                        <p>Author: <%= projects[i].author %></p>
			<p>Project Name: <%= projects[i].projectName %> </p>
                        <p>Started On: <%= Date(projects[i].startedOn) %> </p>
                        <% if(projects[i].isFinished === 1){ %>
                            <p>Finished On: <%= Date(projects[i].finishedOn) %> </p>
                            <a href="file/<%=projects[i].fileHash%>" download><%= projects[i].fileHash %> </a>

	               <% } else {%>
                            <p>Not Finished</p>
                        <% } %>
                    </div>
                    <form id="commentsLink" class="md:w-1/2 mx-auto">
                        <div class="flex space-y-3">
                            <input id="projectID" name="projectID" type="hidden" value= <%= projects[i].openID %> > <!-- Passes project ID to form -->
                        </div>
                        <button
                            class="justify-self-center bg-blue-500 hover:bg-blue-400 text-gray font-mono m-0.5 border-b-4 px-3 py-3 border-blue-700 hover:border-blue-500 rounded"
                            >Comments</button>
                    </form>
                <% } %>
                </div>
                <%- include('partials/footer.ejs') %>
            <% } else {%>
                <%- include('partials/accessDenied.ejs') %>
            <% } %>
        </div>
    </div>
</body>
</html>
