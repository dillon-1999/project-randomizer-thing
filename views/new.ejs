<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{*}SNWBL - Project Generator</title>
    <link rel="stylesheet" href="/css/tailwind.css">
    <script src="/js/helper.js" defer></script>
</head>
<body class="bg-gradient-to-r from-gray-500 via-white to-gray-500">
    <%- include('partials/header.ejs') %>
    <% if (session.isLoggedIn) {%>
        <div>
            <form id="difficultyForm" class="md:w-1/2 mx-auto">
                <div class="flex space-y-3">
                    <label for="difficulty" class="w-20 text-right mr-6 m2">Difficulty:</label>
                    <input id="difficulty" name="name" type="text" class="flex-1" required>
                </div>
                <button type="submit"
                class="bg-blue-500 hover:bg-blue-400 text-gray font-mono m-0.5 border-b-4 px-3 py-3 border-blue-700 hover:border-blue-500 rounded content-center text-center"
                >Submit</button>
                <p class="error"></p>
            </form>
        </div>
        <div id="projectOffer">
            <h3 id="projectName" class="text-center text-grey font-mono";></h3>
            <h5 id="projectDesc" class="text-center text-grey font-mono";></h5>
            <h5 id="projDiff" class="text-center text-grey font-mono";></h5>
            <!-- Button -->

        </div>
        <%- include('partials/footer.ejs') %>
    <% } else { %>
        <%- include('partials/accessDenied.ejs') %>
    <% } %>
</body>
</html>